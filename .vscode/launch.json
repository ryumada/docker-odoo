{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Odoo in Docker (Attach)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/opt/odoo"
        }
      ],
      "justMyCode": true,
    }
  ]
}
